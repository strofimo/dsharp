<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <ProjectGuid>{8780581F-7C26-4B64-9236-BA1C458DF36E}</ProjectGuid>
    <TargetFramework>net461</TargetFramework>
    <DefaultItemExcludes>${DefaultItemExcludes};node_modules\**;dist\**;package-lock.json</DefaultItemExcludes>
    <DisableFastUpToDateCheck>true</DisableFastUpToDateCheck>
  </PropertyGroup>
  
  <ItemGroup>
    <PackageReference Include="Microsoft.TypeScript.MSBuild" Version="2.9.1" />
  </ItemGroup>

  <Target Name="RunScriptBuild" AfterTargets="Build">
    <RemoveDir Directories="dist" />
    <Message Importance="high" Text="Restoring dependencies using 'npm'. This may take several minutes..." />
    <Exec Command="npm install" />
    <Exec Command="npm start" />
    <ItemGroup>
      <EmbeddedResource Include="dist\ds.js" />
    </ItemGroup>
  </Target>
</Project>